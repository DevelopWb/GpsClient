<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.mj.gpsclient.Activity.LoginActivity">
<RelativeLayout
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:id="@+id/login_bg"
    android:visibility="gone"
    >

 </RelativeLayout>

 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:id="@+id/login_content"
     android:background="#ECEAED"

     >
 <ImageView
     android:layout_width="300dp"
     android:layout_height="60dp"
     android:layout_centerHorizontal="true"
     android:id="@+id/title_img"
     android:layout_marginTop="48dp"
     android:visibility="invisible"
     android:src="@drawable/tuqingonlinetitle"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/title_img"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_marginTop="35dp"
    android:orientation="vertical"
    android:id="@+id/editTexts">

    <!--13020081110-->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:id="@+id/editText_user_name"
        android:background="@drawable/edit"
        android:gravity="left|center_vertical"
        android:paddingLeft="10dp"
        android:drawablePadding="20dp"
        android:hint="账户名"
        android:text=""
        android:drawableRight="@drawable/loginmanimage"
        />

    <!--081110-->
    <EditText
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:paddingLeft="10dp"
        android:inputType="textPassword"
        android:background="@drawable/edit"
        android:id="@+id/editText_user_pass"
        android:drawableRight="@drawable/loginpasswordimage"
        android:hint="登录密码"
        android:text=""
        android:gravity="left|center_vertical"
        android:drawablePadding="30dp"
        />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sava_pass_layout"
        android:layout_below="@id/editTexts"
        android:gravity="center_vertical"
        android:layout_marginTop="4dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_sava_pass"
            android:checked="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记住密码"
            android:clickable="true"
            android:textColor="#EA6E09"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>


    <Button
        android:layout_width="match_parent"
       android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/sava_pass_layout"
        android:layout_centerHorizontal="true"
        android:background="#EA6E09"
        android:layout_marginTop="16dp"
        android:text="登录"
        android:textColor="@color/moji_background_white"
        android:id="@+id/btn_login"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_login"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="20dp"
        android:id="@+id/login_other">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#EA6E09"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="1dp"
            android:visibility="invisible"
            android:text="我要试用"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#EA6E09"
            android:layout_alignParentRight="true"
            android:layout_marginTop="1dp"
            android:visibility="invisible"
            android:text="新用户注册"/>

        </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/login_other"
        android:id="@+id/erweima"
        android:layout_marginTop="10dp"
        android:visibility="invisible"
        android:src="@drawable/tuqiangerweima"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/erweima"
        android:textColor="#EA6E09"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:visibility="invisible"
        android:text="扫扫分享"/>

 </RelativeLayout>
</RelativeLayout>
